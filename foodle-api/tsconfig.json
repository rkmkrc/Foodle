{
	"include": ["src/**/*"],
	"compilerOptions": {
		"resolveJsonModule": true,
		"target": "ES2021",
		"module": "commonjs",
		"outDir": "./build",
		"rootDirs": ["./src", "./tests"],
		"importHelpers": true,
		"strict": true,
		"baseUrl": "./src",
		"paths": {
			"#Classes/*": ["Classes/*"],
			"#Types/*": ["Types/*"],
			"#Controllers/*": ["Controllers/*"],
			"#Middlewares/*": ["Middlewares/*"],
			"#Models/*": ["Models/*"],
			"#SqlHelper/*": ["Database/SqlHelper/*"],
			"#RedisHelper/*": ["Database/RedisHelper/*"]
		},
		"typeRoots": ["node_modules/@types"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	}
}
